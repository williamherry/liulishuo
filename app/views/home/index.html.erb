<div class="notice">
  <% if @user.respond_to? :username %>
    <%= t("common.signed_in_message",
          username: @user.username,
          login_count: @user.login_count,
          total_active_time: @user.total_active_time) %>
  <% else %>
    <%= t("common.not_signed_in_message",
          total_active_time: @user.total_active_time) %>
  <% end %>
</div>

<div class="notice">
  <%= t("common.active_user_report",
        active_users_count: @active_users_count,
        active_guests_count: @active_guests_count) %>
</div>

<h2>this is the single page application</h2>
