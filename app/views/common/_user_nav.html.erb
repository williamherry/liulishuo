<% if current_user %>
  <%= link_to "Sign out", sign_out_path %>
  <%= t("common.signed_in_message", username: current_user.username, login_count: current_user.login_count) %>
<% else %>
  <%= link_to "Sign in", sign_in_path %>
  <%= link_to "Sign up", sign_up_path %>
  <%= t("common.not_signed_in_message") %>
<% end %>
